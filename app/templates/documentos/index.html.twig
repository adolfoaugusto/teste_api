{% extends 'base.html.twig' %}

{% block title %}Hello DocumentosController!{% endblock %}

{% block body %}
<style>
    .wrapper { margin-top: 5rem!important; font: 18px/1.5 sans-serif; }
    
</style>

<div class="wrapper">
    <h1>Documentos</h1>
    <table id="documentos" class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Descrição</th>
            <th scope="col">Tipo</th>
            <th scope="col">Ações</th>
        </tr>
        </thead>
        <tbody>
            
        {% for documento in documentos %}
            <tr>
                <td>{{ documento.id }}</td>
                <td>{{ documento.titulo }}</td>
                <td>{{ documento.__toString }}</td>
                <td> - </td>
                <td>
                    <a href="/documentos/{{ documento.id }}" class="btn btn-primary">Show</a>
                    <a href="/documentos/edit/{{ documento.id }}" class="btn btn-secondary" data-id="{{ documento.id }}">Edit</a>
                    <a href="#" class="btn btn-danger delete-documento" data-id="{{ documento.id }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}