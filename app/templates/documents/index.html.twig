{% extends 'base.html.twig' %}

{% block title %}Hello DocumentosController!{% endblock %}

{% block body %}
<style>
    .wrapper { margin-top: 5rem!important; font: 18px/1.5 sans-serif; }
    
</style>

<div class="wrapper">
    <h1>Documentos</h1>
    <table id="documentos" class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Descrição</th>
            <th scope="col">Tipo</th>
            <th scope="col">Ações</th>
        </tr>
        </thead>
        <tbody>
            
        {% for doc in documents %}
            <tr>
                <td>{{ doc.id }}</td>
                <td>{{ doc.title }}</td>
                <td>{{ doc.__toString }}</td>
                <td>{{ doc.type }}</td>
                <td>
                    <a href="/documents/{{ doc.id }}" class="btn btn-primary">Show</a>
                    <a href="/documents/edit/{{ doc.id }}" class="btn btn-secondary" data-id="{{ doc.id }}">Edit</a>
                    <a href="#" class="btn btn-danger delete-documento" data-id="{{ doc.id }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}